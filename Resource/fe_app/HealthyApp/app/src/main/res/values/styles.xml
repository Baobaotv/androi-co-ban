<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toast_error">
        <item name="stTextBold">false</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/svn_avo_bold</item>
        <item name="stTextSize">11sp</item>
        <item name="stColorBackground">@color/win8_red</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_warning</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">20dp</item>
    </style>

    <style name="toast_success">
        <item name="stTextBold">false</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/svn_avo_bold</item>
        <item name="stTextSize">13sp</item>
        <item name="stColorBackground">@color/ForestGreen</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_check</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">center</item>
        <item name="stRadius">20dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/teal_700</item>
        <item name="android:fontFamily">@font/svn_avo</item>

        <!-- Customize your theme here. -->
        <item name="material_dialog_background">#FFFFFF</item>
        <item name="material_dialog_title_text_color">#000000</item>
        <item name="material_dialog_message_text_color">#5F5F5F</item>
        <item name="material_dialog_positive_button_color">@color/GreenYellow</item>
        <item name="material_dialog_positive_button_text_color">#FFFFFF</item>
        <item name="material_dialog_negative_button_text_color">@color/RoyalBlue</item>
    </style>

</resources>