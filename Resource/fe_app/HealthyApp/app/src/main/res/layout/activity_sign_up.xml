<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:measureAllChildren="true"
    tools:context=".ui.activities.SignUpActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:text="Đăng Ký"
        android:textSize="30sp"
        android:fontFamily="@font/svn_avo_bold"
        android:textColor="@color/RoyalBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_signup"
        android:layout_marginTop="16dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_signup"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_round_person_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/svn_avo"
                android:hint="Nhập tên đầy đủ"
                android:inputType="text"
                android:paddingVertical="20dp"
                android:textColor="@color/black"
                android:textColorHint="#CBCBCB"
                android:textSize="14sp"
                app:drawableTint="@color/RoyalBlue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_user_name"
                android:drawablePadding="12dp"
                android:fontFamily="@font/svn_avo"
                android:hint="Nhập Username"
                android:inputType="textEmailAddress"
                android:paddingVertical="20dp"
                android:textColor="@color/black"
                android:textColorHint="#CBCBCB"
                android:textSize="14sp"
                app:drawableTint="@color/RoyalBlue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_round_email_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/svn_avo"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:paddingVertical="20dp"
                android:textColor="@color/black"
                android:textColorHint="#CBCBCB"
                android:textSize="14sp"
                app:drawableTint="@color/RoyalBlue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_round_phone_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/svn_avo"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:paddingVertical="20dp"
                android:textColor="@color/black"
                android:textColorHint="#CBCBCB"
                android:textSize="14sp"
                app:drawableTint="@color/RoyalBlue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_pass_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_round_vpn_key_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/svn_avo"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:paddingVertical="20dp"
                android:textColor="@color/black"
                android:textColorHint="#CBCBCB"
                android:textSize="14sp"
                app:drawableTint="@color/RoyalBlue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_confirm_pass_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:drawableStart="@drawable/ic_round_vpn_key_24"
                android:drawablePadding="12dp"
                android:fontFamily="@font/svn_avo"
                android:hint="Nhập lại mật khẩu"
                android:inputType="textPassword"
                android:paddingVertical="20dp"
                android:textColor="@color/black"
                android:textColorHint="#CBCBCB"
                android:textSize="14sp"
                app:drawableTint="@color/RoyalBlue" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/svn_avo_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Đăng ký"
                android:textSize="18sp"
                app:backgroundTint="@color/RoyalBlue"
                app:cornerRadius="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/svn_avo_bold"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="Nhấn vào đây để đăng nhập"
                android:textAllCaps="false"
                android:textSize="12sp"
                app:backgroundTint="@color/black"
                app:cornerRadius="10dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        app:indicatorSize="40dp"
        android:elevation="10dp"
        android:indeterminate="true"
        app:trackColor="@android:color/transparent"
        app:trackThickness="5dp"
        android:progress="10"
        android:max="100"
        android:visibility="gone"
        android:id="@+id/loading"
        app:indicatorDirectionCircular="clockwise"
        app:trackCornerRadius="10dp"
        app:indicatorColor="@color/RoyalBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>